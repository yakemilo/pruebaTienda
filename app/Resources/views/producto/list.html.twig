{% extends 'layout.html.twig' %}

{% block body %}

    {{ parent() }}
    {{ include ('messages/success.html.twig') }}
    {{ include ('messages/danger.html.twig') }}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
				<h2 class="padding-none">Productos</h2>
			</div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Codigo</th>
                            <th>Marca</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for producto in pagination %}
                            <tr data-id = "{{producto.id}}">
                                <td>{{ producto.nombre }}</td>
                                <td>{{ producto.codigo }}</td>
                                <td>{{ producto.marca }}</td>
                                <td>{{ producto.precio }}</td>
                                <td class="actions">
                                    <a href="{{ path ('app_producto_details', {id: producto.id})}}" class="btn btn-sm btn-info">
                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                    </a>
                                    <a href="{{ path ('app_producto_edit', {id: producto.id})}}" class="btn btn-sm btn-primary">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-danger btn-delete">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>  
                </table>
                <div class="pagination">
                    {{ knp_pagination_render(pagination) }}
                </div>

            </div>
        </div>
    </div>

    {{ include ('form/deleteForm.html.twig', {form:delete_form_ajax, message: 'Est√° seguro que desea eliminar el producto', id: 'form-delete', with_submit: false}) }}

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('public/js/delete-producto.js') }}" ></script>
{% endblock %}