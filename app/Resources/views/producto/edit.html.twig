{% extends 'layout.html.twig' %}

{% block body %}

    {{ parent() }}
    {{ include ('messages/success.html.twig') }}
    <div class="main container">
        <div class = "row well">
            <div class = "col-md-6">
                <div class = "page-header">
                    <h2>Editar Producto</h2>
                </div>
                {{ form_start(form, {'attr' : {'novalidate':'novalidate', 'role':'form'}}) }}
                
                <fieldset>
                    <div class= "form-group">
                        {{ form_label(form.nombre) }}
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre del Producto'}}) }}
                        <span class="text-danger">{{ form_errors(form.nombre) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.nombreTraduccion) }}
                        {{ form_widget(form.nombreTraduccion, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre Traducción'}}) }}
                        <span class="text-danger">{{ form_errors(form.nombreTraduccion) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.codigo) }}
                        {{ form_widget(form.codigo, {'attr': {'class': 'form-control', 'placeholder' : 'Código'}}) }}
                        <span class="text-danger">{{ form_errors(form.codigo) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.peso) }}
                        {{ form_widget(form.peso, {'attr': {'class': 'form-control', 'placeholder' : 'Peso'}}) }}
                        <span class="text-danger">{{ form_errors(form.peso) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.volumen) }}
                        {{ form_widget(form.volumen, {'attr': {'class': 'form-control', 'placeholder' : 'Volumen cm3'}}) }}
                        <span class="text-danger">{{ form_errors(form.volumen) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.precio) }}
                        {{ form_widget(form.precio, {'attr': {'class': 'form-control', 'placeholder' : 'Precio'}}) }}
                        <span class="text-danger">{{ form_errors(form.precio) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.marca) }}
                        {{ form_widget(form.marca, {'attr': {'class': 'form-control', 'placeholder' : 'Marca'}}) }}
                        <span class="text-danger">{{ form_errors(form.marca) }}</span>
                    </div>    

                    <div class= "form-group">
                        {{ form_label(form.descripcion) }}
                        {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'placeholder' : 'Descripcion'}}) }}
                        <span class="text-danger">{{ form_errors(form.descripcion) }}</span>
                    </div>  

                    <div class= "form-group">
                        {{ form_label(form.almacen) }}
                        {{ form_widget(form.almacen, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.almacen) }}</span>
                    </div>  

                    <div class= "form-group">
                        {{ form_label(form.temperatura) }}
                        {{ form_widget(form.temperatura, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.temperatura) }}</span>
                    </div>

                </fieldset>
                <p>
		            {{ form_widget(form.save, {'label' : 'Actualizar', 'attr': {'class': 'btn btn-success'}}) }}
                    <a href=" {{ path ('app_producto_list')}} " >	            
                        <button type="button" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove btn_cerrar"></span>
                            Cerrar
                        </button>
                    </a>
		        </p>                  

                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}