{% extends 'layout.html.twig' %}

{% block body %}

    {{ parent() }}
    {{ include ('messages/success.html.twig') }}
    <div class="main container">
        <div class = "row well">
            <div class = "col-md-6">
                <div class = "page-header">
                    <h2>Editar Usuario</h2>
                </div>
                {{ form_start(form, {'attr' : {'novalidate':'novalidate', 'role':'form'}}) }}
                
                <fieldset>
                    <div class= "form-group">
                        {{ form_label(form.usuario) }}
                        {{ form_widget(form.usuario, {'attr': {'class': 'form-control', 'placeholder' : 'Nombre de Usuario', 'readonly': 'readonly'}}) }}
                        <span class="text-danger">{{ form_errors(form.usuario) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Contraseña'}}) }}
                        <span class="text-danger">{{ form_errors(form.password) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'Correo Electrónico'}}) }}
                        <span class="text-danger">{{ form_errors(form.email) }}</span>
                    </div>

                    <div class= "form-group">
                        {{ form_label(form.role) }}
                        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.role) }}</span>
                    </div>

                    <div class= "checkbox">
                        <label>
                        {{ form_widget(form.activo) }} Active
                        <span class="text-danger">{{ form_errors(form.activo) }}</span>
                        </label>
                    </div>
                </fieldset>
                <p>
		            {{ form_widget(form.save, {'label' : 'Actualizar', 'attr': {'class': 'btn btn-success'}}) }}
                    <a href=" {{ path ('app_usuario_list')}} " >	            
                        <button type="button" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove btn_cerrar"></span>
                            Cerrar
                        </button>
                    </a>
		        </p>                  

                {{ form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}